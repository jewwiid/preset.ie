{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "SUPABASE_SERVICE_ROLE_KEY",
        "NANOBANANA_API_KEY",
        "NANOBANAN_API_KEY",
        "PEXELS_API_KEY",
        "OPENAI_API_KEY",
        "NANOBANANA_CALLBACK_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_SECRET_KEY",
        "NODE_ENV",
        "IMAGE_PROVIDER",
        "WAVESPEED_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "SUPABASE_SERVICE_ROLE_KEY",
        "NANOBANANA_API_KEY",
        "NANOBANAN_API_KEY",
        "PEXELS_API_KEY",
        "OPENAI_API_KEY",
        "NANOBANANA_CALLBACK_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_SECRET_KEY",
        "NODE_ENV",
        "IMAGE_PROVIDER",
        "WAVESPEED_API_KEY"
      ]
    },
    "check-types": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
