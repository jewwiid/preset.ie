{
  "expo": {
    "name": "Preset",
    "slug": "preset",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00876f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ie.preset.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Preset uses the camera to capture photos for your creative projects.",
        "NSPhotoLibraryUsageDescription": "Preset needs access to your photo library to upload images.",
        "NSLocationWhenInUseUsageDescription": "Preset uses your location to show nearby gigs and collaborations.",
        "NSMicrophoneUsageDescription": "Preset may use the microphone for video content creation.",
        "UIBackgroundModes": ["background-fetch", "background-processing"]
      },
      "associatedDomains": ["applinks:preset.ie"],
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00876f"
      },
      "edgeToEdgeEnabled": true,
      "package": "ie.preset.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "preset.ie"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-camera",
      "expo-image-picker",
      "expo-location",
      "expo-secure-store",
      "expo-font",
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "preset-mobile-app"
      }
    }
  }
}
