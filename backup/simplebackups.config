RETENTION_COUNT=50          # Keep maximum 50 backups

# Backup Options
INCLUDE_SCHEMA=true
INCLUDE_DATA=true
INCLUDE_FUNCTIONS=true
INCLUDE_TRIGGERS=true
INCLUDE_RLS_POLICIES=true

# Compression
COMPRESS_BACKUPS=true
COMPRESSION_METHOD="gzip"   # gzip, bzip2, or xz

# Encryption
ENCRYPT_BACKUPS=false
ENCRYPTION_KEY=""

# Notifications
NOTIFICATION_EMAIL=""
SLACK_WEBHOOK_URL=""
