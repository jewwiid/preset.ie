{
  "name": "preset",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "context:generate": "node scripts/generate-context.js",
    "theme:audit": "node scripts/theme-audit.js --report-only",
    "theme:audit:verbose": "node scripts/theme-audit.js --report-only --verbose",
    "theme:fix-colors": "node scripts/fix-hardcoded-colors.js",
    "theme:fix-all": "node scripts/theme-audit.js --fix-colors --fix-spacing --fix-shadows",
    "theme:scan": "node scripts/fix-hardcoded-colors.js --scan-only"
  },
  "devDependencies": {
    "dotenv": "^16.6.1",
    "prettier": "^3.6.2",
    "shadcn": "^3.2.1",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "dependencies": {
    "@plunk/node": "^3.0.3",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.57.2",
    "maplibre-gl": "^5.9.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "react-dropzone": "^14.3.8",
    "stripe": "^18.5.0",
    "zustand": "^5.0.8"
  }
}
